	<div class="six columns centered">
<%= image_tag 'tagline_heartbeat.png' %>
<%= image_tag 'heart_heartbeat.png' %>
	<!--	<img src="/assets/tagline_heartbeat.png">
		<img src="assets/heart_heartbeat.png" class="animated pulse-slow infinite"> -->
